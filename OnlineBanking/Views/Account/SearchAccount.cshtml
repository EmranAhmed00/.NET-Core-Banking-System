
@using PagedList;
@using PagedList.Mvc;


@model List<OnlineBanking.Models.Accounts>
<form asp-controller="Account" asp-action="SearchAccount" id="search" method="post">

    <div class="card" id="welcome">
        <h1>Account Information </h1> <br />
        <h2> Search  by AccountId</h2>

        <p>
            <input type="text" name="search" />
            <input type="submit" value="Search" />
        </p>
    </div>
    <br />
    <div class="card">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">AccountInfo</th>
                    <th scope="col">Transactions</th>
                    @*<th scope="col">AccountId</th>*@
                    <th scope="col">Frequency</th>
                    <th scope="col">Created</th>
                    <th scope="col">Balance</th>

                </tr>
            </thead>

            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (Accounts accounts in Model)
                    {

                <tr>
                    <td><a asp-controller="Account" asp-action="AccountInformation" asp-route-id="@accounts.AccountId">@accounts.AccountId Account Information</a></td>

                    <td><a asp-controller="Account" asp-action="accountTransaction" asp-route-accountId="@accounts.AccountId" asp-route-page="1" >@accounts.AccountId Transactions:</a></td>
                    <td>@accounts.Frequency</td>
                    <td>@accounts.Created</td>
                    <td>@accounts.Balance</td>



                </tr>
                    }
                }
            </tbody>
        </table>


      
        

    </div>

</form>
