@model OnlineBanking.Models.Customers

<form asp-controller="Customer" asp-action="searchByCustomerId" id="search" method="post">

    <div class="card" id="welcome">
        <h2> Search by CustomerId </h2>

        <p>

            <input type="number" value="search" name="id" />
            <input type="submit" value="Search" />
        </p>

        @if ((string)TempData["success"] == "abc")
        {
            <h2 class="text-danger"> Please enter the CustomerId    </h2>
        }
    </div>
    <div class="card">

        <table class="table">
            <thead>
                <tr>

                    <th scope="col">CustomerId</th>
                    <th scope="col">Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">City</th>

                    <th scope="col">StreetAddress</th>
                    <th scope="col">NationalId</th>
                    <th scope="col">Birthday</th>
                </tr>
            </thead>

            <tbody>

              
                @if (Model.CustomerId > 0)
                {
                    <tr>
                        <td><a asp-controller="Customer" asp-action="CustomerInformation" asp-route-id="@Model.CustomerId">@Model.CustomerId</a></td>
                        <td>@Model.Givenname @Model.Surname</td>

                        <td>@Model.Country</td>
                        <td>@Model.City</td>
                        <td>@Model.Streetaddress</td>
                        <td>@Model.NationalId</td>
                        <td>@Model.Birthday</td>
                    </tr>

                }


            </tbody>
        </table>

    </div>


</form>
